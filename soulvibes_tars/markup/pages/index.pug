        |%=symbols=%
        .body-wrapper
            +header()
            main
                .promo-image
                    h1.promo-image__title High Quality Internet Music Stations
                    img.promo-image__img(src='__static__/img/content/promo.jpg' width='1400px' height='588px' alt='promo')
                section.player
                    h1.player__title.visually-hidden PLAYER
                    button.player__button.player__button_play(type='button' aria-label='play song')
                        img.player__image.player__image_play(src='__static__/img/general/play.png' width='14px' height='25px' alt='play')
                    .player__slider.slider
                        p.slider__song The Diary of Jane - Breaking Benjamin
                        p.slider__time 3:20
                        .slider__range
                            button.slider__button(type='button' aria-label='song')
                    button.player__button.player__button_vol(type='button' aria-label='volume')
                        img.player__image.player__image_vol(src='__static__/img/general/volume.png' width='22px' height='18px' alt='volume')
                    button.player__button.player__button_prev(type='button' aria-label='previous song')
                        img.player__image.player__image_prev(src='__static__/img/general/prev.png' width='12px' height='17px' alt='previous')
                    button.player__button.player__button_next(type='button' aria-label='next song')
                        img.player__image.player__image_next(src='__static__/img/general/next.png' width='12px' height='17px' alt='next')
                    button.player__button.player__button_loop(type='button' aria-label='loop song')
                        img.player__image.player__image_loop(src='__static__/img/general/loop.png' width='18px' height='20px' alt='loop')
                    button.player__button.player__button_qu(type='button' aria-label='queue')
