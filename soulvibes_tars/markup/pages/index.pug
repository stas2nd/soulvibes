doctype html
html(class="no-js", lang="en")

    include ../components/head/head.pug
    include ../components/header/header.pug
    include ../components/genre/genre.pug
    include ../components/news/news.pug
    include ../components/footer/footer.pug

    head
        +head(head.defaults)
